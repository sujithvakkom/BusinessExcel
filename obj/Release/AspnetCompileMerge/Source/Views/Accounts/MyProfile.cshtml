@using BusinessExcel.Models
@using BootstrapHtmlHelper
@using BusinessExcel.Providers.ProviderContext.Entities

@model  EditUserProfile

    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            @BusinessExcel.Controllers.AccountsController.MYPROFILE_TITLE
            <small>Profile management</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Account</a></li>
            <li class="active">Profile</li>
        </ol>
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-md-6" id="change-user-name-form">
                @Html.Partial("_ChangeUsernameBlock", Model)
            </div>
            <div class="col-md-6" id="change-user-password-form">
                @Html.Partial("_ChangeUserPasswordBlock", Model)
            </div>
        </div>
    </section><!-- /.content -->
