@using BootstrapHtmlHelper

@model BusinessExcel.Models.RegisterModel

<!-- Modal -->
<div id="user-profile-edit" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">User Register</h4>
            </div>
            <div class="modal-body">
                @Html.BootstrapTextBoxFor(
                    m => m.FirstName,
                    null,
                    new Dictionary<string, object>() { { "class", "form-control"} ,{"readonly", "readonly"} },
                    null)
                @Html.BootstrapTextBoxFor(
                    m => m.SecondName,
                    null,
                    new Dictionary<string, object>() { { "class", "form-control" } },
                    null)
                @Html.BootstrapTextBoxFor(
                    m => m.Email,
                    null,
                    new Dictionary<string, object>() { { "class", "form-control" } },
                    null)
                @Html.BootstrapTextBoxFor(
                    m => m.Password,
                    null,
                    new Dictionary<string, object>() { { "class", "form-control" } },
                    null)
                @Html.BootstrapTextBoxFor(
                    m => m.ConfirmPassword,
                    null,
                    new Dictionary<string, object>() { { "class", "form-control" } },
                    null)
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Register</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>

    </div>
</div> 