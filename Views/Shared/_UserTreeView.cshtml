                                  var node_new = $("#jstree").jstree().get_node(this.id);

                                  if (node_new.a_attr.href == p_username) {
                                      $('#jstree').jstree('select_node', node_new);
                                      $("#jstree").jstree("open_all", node_new);
                                      $('#Add_btn_user').css({ 'cursor': 'default' });

