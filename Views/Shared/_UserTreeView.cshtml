                    if (data != 0) {

                        $('#Add_modalnew').modal('hide');

                        $(".modal-backdrop").remove();
                        $('#userTreeview').html(data)

                        $("#jstree").bind('ready.jstree', function (event, data) {
                            var $tree = $(this);
                            $($tree.jstree().get_json($tree, {
                                flat: true
                            }))
