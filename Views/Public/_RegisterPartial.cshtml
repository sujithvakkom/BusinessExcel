@using BootstrapHtmlHelper

@model BusinessExcel.Models.RegisterModel

@using (Ajax.BeginForm("Register", new AjaxOptions()
{
    HttpMethod = "Post",
    InsertionMode = InsertionMode.Replace
}))
{
    @Html.AntiForgeryToken()
    <div class="register-box">
        <div class="register-logo">
            <a href="../../index2.html">
                <img src="../../Images/business-excel-dark-185X27.png" />
            </a>
        </div>
        <div class="register-box-body">
            <p class="login-box-msg">Register a new membership</p>
            @Html.AdminLTETextBoxFor(
            m => m.RegFullName,
        null,
        new Dictionary<string, object>() { { "class", "form-control" } },
        null,
        null,
        "fa-user",
        false,
        true,
        true)
            @*<div class="form-group has-feedback">
                    <input type="text" class="form-control" placeholder="Full name">
                    <span class="glyphicon glyphicon-user form-control-feedback"></span>
                </div>*@

            @Html.AdminLTETextBoxFor(
        m => m.RegEmail,
        null,
        new Dictionary<string, object>() { { "class", "form-control" } },
        null,
        null,
        "fa-user-secret",
        false,
        true,
        true)

            @*<div class="form-group has-feedback">
                    <input type="email" class="form-control" placeholder="Email">
                    <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
                </div>*@
            @Html.AdminLTEPasswordFor(
        m => m.RegPassword,
        null,
        new Dictionary<string, object>() { { "class", "form-control" } },
        null,
        null,
        "fa-key",
        false,
        true,
        true)
            @*<div class="form-group has-feedback">
                    <input type="password" class="form-control" placeholder="Password">
                    <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                </div>*@
            @Html.AdminLTEPasswordFor(
        m => m.RegConfirmPassword,
        null,
        new Dictionary<string, object>() { { "class", "form-control" } },
        null,
        null,
     "fa-repeat",
        false,
        true,
        true)

            @*<div class="form-group has-feedback">
                    <input type="password" class="form-control" placeholder="Retype password">
                    <span class="glyphicon glyphicon-log-in form-control-feedback"></span>
                </div>*@
            <div class="row">
                <div class="col-xs-8">
                    @*<div class="checkbox icheck">
                            <label>
                                <input type="checkbox"> I agree to the <a href="#">terms</a>
                            </label>
                        </div>*@
                </div><!-- /.col -->
                <div class="col-xs-4">
                    <button type="submit" class="btn btn-primary btn-block btn-flat">Register</button>
                </div><!-- /.col -->
            </div>
        </div>
    </div>
}
