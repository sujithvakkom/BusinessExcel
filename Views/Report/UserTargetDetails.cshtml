                numberWithCommas(EnteredAmtTotal) + '</b></td>        <td></td>      </tr>');


         
            ///Total Target Percentage calculation
            var linetempEnt = Number(0);
            var linetempAch = Number(0);
            var TotAchEdited = Number(0);

            $("#Tsheet" + model + " tr").not(':first').not(':last').each(function () {
                linetempEnt = Number($(this).find('td:eq(4) label ').html().replace(/\,/g, ""));
                TemplinAch = Number($(this).find('td:eq(3) p ').html().replace(/\,/g, ""));       
                if (linetempEnt > 0) {
                    TotAchEdited = TotAchEdited + linetempEnt;
                }
                else {
                    TotAchEdited = TotAchEdited + TemplinAch;
                }
            });

            var totTargetPer = Number(0);
            totTargetPer = ((TotAchEdited * 100) / targetTotal).toFixed(2);
          
            $('#Target_Perc_' + model + '').val(isNaN(totTargetPer) ? '0.00' + '%' : totTargetPer + "%");





